{
    // TODO: ruff
    // -------- Python interpreter ----------
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // -------- Formatting ------------------
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "python.terminal.activateEnvInCurrentTerminal": true,
    // -------- Environment -----------------
    "python.envFile": "${workspaceFolder}/.env",
    "terminal.integrated.env.linux": { // make shells inherit
        "DOTENV_CONFIG_PATH": "${workspaceFolder}/.env"
    },
    // "jupyter.envFile": "${workspaceFolder}/.env",
    // "jupyter.runStartupCommands": [
    //     "%load_ext autoreload",
    //     "%autoreload 2",
    //     "from dotenv import load_dotenv, find_dotenv; load_dotenv(find_dotenv())",
    //     "import numpy as np, pandas as pd"
    // ],
    // -------- Type checking ---------------
    // This is for VSCode
    // "python.analysis.typeCheckingMode": "off",
    // "python.analysis.extraPaths": [
    //     "${workspaceFolder}/src",
    // ],
    // This is for Cursor
    "cursorpyright.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    "cursorpyright.analysis.typeCheckingMode": "off",
    // "python.REPL.enableREPLSmartSend": false,
    // https://forum.cursor.com/t/how-to-fix-cursor-agent-not-using-default-zsh-shell-on-macos/37734/14
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "/bin/zsh",
            "args": [
                "-l"
            ]
        },
        "bash": null
    },
    "terminal.integrated.automationProfile.osx": {
        "path": "/bin/zsh",
        "args": [
            "-l"
        ]
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.gpuAcceleration": "off"
}